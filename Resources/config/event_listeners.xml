<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_channel.event_listener.configure_menu_subscriber.class">Integrated\Bundle\ChannelBundle\EventListener\ConfigureMenuSubscriber</parameter>

    </parameters>

    <services>

        <service id="integrated_channel.event_listener.configure_menu_subscriber" class="%integrated_channel.event_listener.configure_menu_subscriber.class%">
            <argument type="service" id="security.authorization_checker" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="integrated_channel.event_listener.connector_called_subscriber" class="Integrated\Bundle\ChannelBundle\EventListener\ConnectorCalledSubscriber">
            <argument type="service" id="app.twitter_oauth" />
            <argument type="service" id="app.facebook_oauth" />
            <tag name="kernel.event_listener" event="integrated_channel.connector" method="onConnectorCalled" />
        </service>

    </services>

</container>
